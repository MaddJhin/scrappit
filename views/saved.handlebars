<!-- Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="commentArea">Add new comment</label>
                    <textarea class="form-control" id="commentArea" rows="3"></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="comment-save">Save changes</button>
            </div>
        </div>
    </div>
</div>

{{#each hits}}

<div class="card border-info m-3">

    <h4 class="card-header">
        <form class="d-inline">
            <button type="button" class="btn btn-primary note-btn" data-toggle="modal" data-target="#commentModal" data-link="{{link}}"
                data-title="{{title}}" data-id="{{_id}}">
                Add Comment
            </button>
        </form>
        <form class="d-inline" action="/removePost" method="POST">
            <button data-title="{{title}}" type="button" class="btn btn-danger remove-btn">Remove Post</button>
        </form>
    </h4>

    <div class="card-body">
        <h4 class="card-title">
            <a href="{{link}}">{{title}}</a>
        </h4>
    </div>
</div>

{{/each}}